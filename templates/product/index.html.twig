{% extends 'base.html.twig' %}

{% block title %}Boutique
{% endblock %}

{% block body %}
	<h1>Boutique</h1>

	<form method="get" action="{{ path('app_product') }}">
		<label for="min_price">Prix min :</label>
		<input type="number" step="0.01" name="min_price" id="min_price" value="{{ minPrice }}">

		<label for="max_price">Prix max :</label>
		<input type="number" step="0.01" name="max_price" id="max_price" value="{{ maxPrice }}">

		<button type="submit">Filtrer</button>
	</form>

	<ul>
		{% for product in products %}
			<li>
				{{ product.name }}
				-
				{{ product.price }}
				€
				{% if app.user %}
					<a href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
				{% endif %}
			</li>
		{% else %}
			<li>Aucun produit trouvé.</li>
		{% endfor %}
	</ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Accueil -
	{{ companyInfo.name }}
{% endblock %}

{% block body %}
	<h1>Bienvenue chez
		{{ companyInfo.name }}</h1>

	<p>
		<strong>Adresse :</strong>
		{{ companyInfo.address }}</p>
	<p>
		<strong>Email :</strong>
		<a href="mailto:{{ companyInfo.email }}">{{ companyInfo.email }}</a>
	</p>
	<p>
		<strong>Slogan :</strong>
		{{ companyInfo.slogan }}</p>

	<h2>Produits mis en avant</h2>
	<ul style="list-style: none; padding: 0; display: flex; gap: 20px;">
		{% for product in featuredProducts %}
			<li style="border: 1px solid #ccc; padding: 10px; width: 200px; text-align: center;">
				<img src="{{ product.getImageUrl() }}" alt="{{ product.name }}" style="width: 100%; height: auto;">
				<h3>{{ product.name }}</h3>
				<p>{{ product.price }}
					â‚¬</p>
				{% if app.user %}
					<a href="{{ path('product_show', {'id': product.id}) }}" style="display: inline-block; margin-top: 5px; padding: 5px 10px; background: #007bff; color: white; text-decoration: none; border-radius: 4px;">
						Voir
					</a>
				{% endif %}
			</li>
		{% else %}
			<li>Aucun produit mis en avant actuellement.</li>
		{% endfor %}
	</ul>
{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		<title>
			{% block title %}Mon site
			{% endblock %}
		</title>
	</head>
	<body>
		<nav>
			<ul>
				{% if app.user %}
					<li>
						<a href="{{ path('app_dashboard') }}">Dashboard</a>
					</li>

					{% if is_granted('ROLE_ADMIN') %}
						<li>
							<a href="{{ path('admin_dashboard') }}">Admin Dashboard</a>
						</li>
					{% endif %}

					<li>
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</li>
				{% else %}
					<li>
						<a href="{{ path('app_login') }}">Se connecter</a>
					</li>
					<li>
						<a href="{{ path('app_registration') }}">S’inscrire</a>
					</li>
				{% endif %}
			</ul>
		</nav>


		{% block body %}{% endblock %}
	</body>
</html>
